<Window x:Class="TimeStudiesWpf.Dialogs.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Settings / Einstellungen"
        Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Settings Content -->
        <StackPanel Grid.Row="0">
            <!-- Language -->
            <GroupBox Header="Language / Sprache" Margin="0,0,0,16" Padding="8">
                <ComboBox x:Name="LanguageCombo" Width="200" HorizontalAlignment="Left">
                    <ComboBoxItem Content="English" Tag="en-US"/>
                    <ComboBoxItem Content="Deutsch" Tag="de-DE"/>
                </ComboBox>
            </GroupBox>

            <!-- Base Directory -->
            <GroupBox Header="Base Directory / Basisverzeichnis" Margin="0,0,0,16" Padding="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="BaseDirectoryTextBox" Grid.Column="0" Padding="4"
                             IsReadOnly="True" VerticalContentAlignment="Center"/>
                    <Button Grid.Column="1" Content="Browse..." Padding="8,4" Margin="8,0,0,0"
                            Click="BrowseButton_Click"/>
                </Grid>
            </GroupBox>

            <!-- Button Size -->
            <GroupBox Header="Button Size / Schaltflächengröße" Margin="0,0,0,16" Padding="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="ButtonSizeSlider" Grid.Column="0"
                            Minimum="48" Maximum="120" TickFrequency="12"
                            IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" VerticalAlignment="Center"
                               Text="{Binding Value, ElementName=ButtonSizeSlider, StringFormat={}{0}px}"
                               Margin="8,0,0,0"/>
                </Grid>
            </GroupBox>

            <!-- Options -->
            <GroupBox Header="Options / Optionen" Padding="8">
                <StackPanel>
                    <CheckBox x:Name="ConfirmCloseCheckBox" Content="Confirm before closing recording / Bestätigung vor Beenden" Margin="0,0,0,8"/>
                    <CheckBox x:Name="AutoSaveCheckBox" Content="Auto-save recordings / Aufnahmen automatisch speichern"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="OK" Width="80" Padding="8,4" Margin="0,0,8,0"
                    Click="OkButton_Click" IsDefault="True"/>
            <Button Content="Cancel" Width="80" Padding="8,4"
                    Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
