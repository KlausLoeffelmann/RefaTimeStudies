<Window x:Class="TimeStudiesWpf.Dialogs.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeStudiesWpf.Dialogs"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Height="300" Width="500"
        Loaded="Window_Loaded">
    <Grid Margin="{StaticResource MarginLarge}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Label Grid.Row="0"
               x:Name="AppNameLabel"
               Style="{StaticResource HeaderLabelStyle}"
               HorizontalAlignment="Center"
               FontSize="{StaticResource FontSizeXXLarge}"/>

        <!-- Content -->
        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock x:Name="VersionTextBlock"
                       FontSize="{StaticResource FontSizeMedium}"
                       HorizontalAlignment="Center"
                       Margin="{StaticResource MarginNormal}"/>
            <TextBlock x:Name="DescriptionTextBlock"
                       TextAlignment="Center"
                       Margin="{StaticResource MarginNormal}"
                       TextWrapping="Wrap"/>
            <TextBlock x:Name="CopyrightTextBlock"
                       TextAlignment="Center"
                       Margin="{StaticResource MarginNormal}"
                       FontStyle="Italic"
                       Foreground="{StaticResource TextSecondaryBrush}"/>
        </StackPanel>

        <!-- Close Button -->
        <Button Grid.Row="2"
                x:Name="CloseButton"
                Style="{StaticResource TouchButtonStyle}"
                HorizontalAlignment="Center"
                MinWidth="100"
                Margin="{StaticResource MarginNormal}"
                Click="Close_Click"/>
    </Grid>
</Window>