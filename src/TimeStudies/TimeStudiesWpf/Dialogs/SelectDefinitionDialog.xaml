<Window x:Class="TimeStudiesWpf.Dialogs.SelectDefinitionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Select Definition / Definition auswählen"
        Height="450" Width="600"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Definitions List -->
        <GroupBox Grid.Row="0" Header="Available Definitions" Padding="8">
            <ListBox x:Name="DefinitionsListBox"
                     SelectionChanged="DefinitionsListBox_SelectionChanged"
                     MouseDoubleClick="DefinitionsListBox_MouseDoubleClick">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="{Binding Name}" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock Grid.Row="0" Grid.Column="1"
                                       Text="{Binding ModifiedAt, StringFormat={}{0:yyyy-MM-dd HH:mm}}"
                                       Foreground="Gray" FontSize="11"/>

                            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                        Orientation="Horizontal">
                                <TextBlock Text="{Binding ProcessSteps.Count}" Foreground="Gray" FontSize="11"/>
                                <TextBlock Text=" process steps" Foreground="Gray" FontSize="11"/>
                                <TextBlock Text=" • " Foreground="Gray" FontSize="11"/>
                                <TextBlock Text="{Binding Description}" Foreground="Gray" FontSize="11"
                                           MaxWidth="300" TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

        <!-- Preview -->
        <GroupBox Grid.Row="1" Header="Preview" Margin="0,8,0,0" Padding="8">
            <Grid x:Name="PreviewGrid" MinHeight="80">
                <TextBlock x:Name="NoSelectionText" Text="Select a definition to preview"
                           Foreground="Gray" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <StackPanel x:Name="PreviewPanel" Visibility="Collapsed">
                    <TextBlock x:Name="PreviewName" FontWeight="Bold" FontSize="14"/>
                    <TextBlock x:Name="PreviewDescription" Foreground="Gray" TextWrapping="Wrap"/>
                    <TextBlock x:Name="PreviewSteps" Margin="0,8,0,0"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button x:Name="OpenButton" Content="Open" Width="80" Padding="8,4" Margin="0,0,8,0"
                    Click="OpenButton_Click" IsEnabled="False"/>
            <Button Content="Cancel" Width="80" Padding="8,4"
                    Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
