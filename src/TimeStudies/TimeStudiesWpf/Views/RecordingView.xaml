<UserControl x:Class="TimeStudiesWpf.Views.RecordingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TimeStudiesWpf.Views"
             xmlns:conv="clr-namespace:TimeStudiesWpf.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">

    <UserControl.Resources>
        <conv:TimeSpanToStringConverter x:Key="TimeSpanConverter"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Definition Name -->
        <Border Grid.Row="0" Background="#E3F2FD" Padding="12" Margin="4">
            <TextBlock Text="{Binding DefinitionName}" FontSize="20" FontWeight="Bold"/>
        </Border>

        <!-- Control Panel -->
        <Grid Grid.Row="1" Margin="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Start/Stop/Pause Buttons -->
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Button Command="{Binding StartCommand}"
                        Style="{StaticResource StartButtonStyle}"
                        Content="▶ Start Recording"
                        MinWidth="160"/>

                <Button Command="{Binding StopCommand}"
                        Style="{StaticResource StopButtonStyle}"
                        Content="⏹ Stop Recording"
                        MinWidth="160"/>

                <Button Command="{Binding PauseCommand}"
                        Style="{StaticResource PauseButtonStyle}"
                        Content="⏸ Pause"
                        MinWidth="120"/>
            </StackPanel>

            <!-- Real-time Display -->
            <Border Grid.Column="1" Background="#FFF8E1" BorderBrush="#FFC107"
                    BorderThickness="2" CornerRadius="4" Margin="16,0" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Progressive Time -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="Progressive Time" FontSize="12" Foreground="Gray"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding ProgressiveTime, Converter={StaticResource TimeSpanConverter}}"
                                   FontSize="36" FontWeight="Bold" FontFamily="Consolas"
                                   HorizontalAlignment="Center" Foreground="#1976D2"/>
                    </StackPanel>

                    <Rectangle Grid.Column="1" Width="1" Fill="#E0E0E0" Margin="16,0"/>

                    <!-- Current Step -->
                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock Text="Current Step" FontSize="12" Foreground="Gray"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding CurrentStepDescription}"
                                   FontSize="18" FontWeight="SemiBold"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Entry Count -->
            <Border Grid.Column="2" Background="#E8F5E9" BorderBrush="#4CAF50"
                    BorderThickness="2" CornerRadius="4" Padding="16">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Entries" FontSize="12" Foreground="Gray"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding EntryCount}" FontSize="28" FontWeight="Bold"
                               HorizontalAlignment="Center" Foreground="#388E3C"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Process Step Buttons Grid -->
        <GroupBox Grid.Row="2" Header="Process Steps - Click to Record" Margin="4" Padding="8">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding ProcessSteps}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding DataContext.SelectStepCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                    CommandParameter="{Binding}"
                                    MinWidth="{Binding DataContext.ButtonSize, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                    MinHeight="{Binding DataContext.ButtonSize, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                    Margin="4" Padding="8">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource TouchButtonStyle}">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                        <Setter Property="BorderBrush" Value="#1976D2"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                <Setter Property="Background" Value="#4CAF50"/>
                                                <Setter Property="BorderBrush" Value="#2E7D32"/>
                                                <Setter Property="BorderThickness" Value="3"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsDefaultStep}" Value="True">
                                                <Setter Property="BorderBrush" Value="#FF9800"/>
                                            </DataTrigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding IsActive}" Value="True"/>
                                                    <Condition Binding="{Binding IsDefaultStep}" Value="True"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Background" Value="#FFA726"/>
                                                <Setter Property="BorderBrush" Value="#F57C00"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding OrderNumber}"
                                               FontSize="24" FontWeight="Bold"
                                               HorizontalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#1976D2"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="{Binding Description}"
                                               FontSize="10" TextWrapping="Wrap"
                                               TextAlignment="Center" MaxWidth="80"
                                               HorizontalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#424242"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="★ Default" FontSize="8" Foreground="#FF9800"
                                               HorizontalAlignment="Center"
                                               Visibility="{Binding IsDefaultStep, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>

        <!-- Entry Log Preview -->
        <Expander Grid.Row="3" Header="Entry Log (Recent)" IsExpanded="False" Margin="4">
            <DataGrid ItemsSource="{Binding Entries}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      MaxHeight="150"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal"
                      CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="#" Binding="{Binding SequenceNumber}" Width="40"/>
                    <DataGridTextColumn Header="Order" Binding="{Binding ProcessStepOrderNumber}" Width="50"/>
                    <DataGridTextColumn Header="Step" Binding="{Binding ProcessStepDescription}" Width="*"/>
                    <DataGridTextColumn Header="Progressive Time" Binding="{Binding ElapsedFromStart, StringFormat=mm\\:ss\\.fff}" Width="100"/>
                    <DataGridTextColumn Header="Duration" Binding="{Binding Duration, StringFormat=mm\\:ss\\.fff}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>
        </Expander>
    </Grid>
</UserControl>
