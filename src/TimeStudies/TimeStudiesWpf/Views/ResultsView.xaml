<UserControl x:Class="TimeStudiesWpf.Views.ResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TimeStudiesWpf.Views"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="900">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Recording Selection -->
        <GroupBox Grid.Row="0" Header="Select Recording" Margin="4" Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ComboBox Grid.Column="0" ItemsSource="{Binding Recordings}"
                          SelectedItem="{Binding SelectedRecording}"
                          DisplayMemberPath="StartedAt"
                          VerticalContentAlignment="Center"
                          Padding="8,4">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding StartedAt, StringFormat={}{0:yyyy-MM-dd HH:mm}}" FontWeight="SemiBold"/>
                                <TextBlock Text=" - " Foreground="Gray"/>
                                <TextBlock Text="{Binding Entries.Count}" Foreground="Gray"/>
                                <TextBlock Text=" entries" Foreground="Gray"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Button Grid.Column="1" Command="{Binding RefreshCommand}"
                        Content="ðŸ”„ Refresh" Padding="12,4" Margin="8,0,0,0"/>

                <Button Grid.Column="2" Command="{Binding ExportCommand}"
                        Content="ðŸ“Š Export CSV" Padding="12,4" Margin="8,0,0,0"
                        Background="#4CAF50" Foreground="White"/>
            </Grid>
        </GroupBox>

        <!-- Recording Summary -->
        <Border Grid.Row="1" Background="#E8F5E9" Padding="12" Margin="4,0,4,4">
            <TextBlock Text="{Binding RecordingSummaryText}" FontSize="14"/>
        </Border>

        <!-- Detail Entries Grid -->
        <GroupBox Grid.Row="2" Header="Recorded Entries (Detail)" Margin="4" Padding="4">
            <DataGrid ItemsSource="{Binding Entries}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal"
                      AlternatingRowBackground="#FAFAFA"
                      CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Seq #" Binding="{Binding SequenceNumber}" Width="50"/>
                    <DataGridTextColumn Header="Order #" Binding="{Binding ProcessStepOrderNumber}" Width="60"/>
                    <DataGridTextColumn Header="Process Step" Binding="{Binding ProcessStepDescription}" Width="*" MinWidth="150"/>
                    <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp, StringFormat={}{0:HH:mm:ss}}" Width="80"/>
                    <DataGridTextColumn Header="Progressive Time" Binding="{Binding ElapsedFromStart, StringFormat=hh\\:mm\\:ss\\.f}" Width="110"/>
                    <DataGridTextColumn Header="Duration" Binding="{Binding Duration, StringFormat=mm\\:ss\\.ff}" Width="80"/>
                    <DataGridTextColumn Header="Duration (s)" Binding="{Binding Duration.TotalSeconds, StringFormat=F2}" Width="80"/>
                    <DataGridTextColumn Header="Dimension" Binding="{Binding DimensionValue}" Width="70"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Splitter -->
        <GridSplitter Grid.Row="3" Height="5" HorizontalAlignment="Stretch"
                      VerticalAlignment="Center" Background="#E0E0E0"/>

        <!-- Summary Grid -->
        <GroupBox Grid.Row="4" Header="Summary by Process Step" Margin="4" Padding="4">
            <DataGrid ItemsSource="{Binding Summary}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal"
                      AlternatingRowBackground="#FFF8E1"
                      CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Order #" Binding="{Binding OrderNumber}" Width="60"/>
                    <DataGridTextColumn Header="Process Step" Binding="{Binding Description}" Width="*" MinWidth="150"/>
                    <DataGridTextColumn Header="Count" Binding="{Binding Count}" Width="60"/>
                    <DataGridTextColumn Header="Total Duration" Binding="{Binding TotalDuration, StringFormat=hh\\:mm\\:ss}" Width="100"/>
                    <DataGridTextColumn Header="Total (s)" Binding="{Binding TotalSeconds, StringFormat=F2}" Width="70"/>
                    <DataGridTextColumn Header="Total (min)" Binding="{Binding TotalMinutes, StringFormat=F2}" Width="80"/>
                    <DataGridTextColumn Header="Avg (s)" Binding="{Binding AverageSeconds, StringFormat=F2}" Width="70"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</UserControl>
